<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="stripped">
  <thead>
    <tr>
      <th>Title </th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td>
        <a href="/stories/show/{{id}}">{{title}}</a>
      </td>
      <td>{{formatDate date 'MMMM Do YYYY'}}</td>
      <td>
        <span class="dash-status">{{status}}</span>
      </td>
      <td>
        <a class=" btn left-align" href="/stories/edit/{{id}}">
          <i class="fa fa-pencil"></i> Edit
        </a>
        <form action="/stories" method="POST" id="delete-form">
          <button type='submit' class="btn red">
            <i class="fa fa-remove"></i> Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have no stories..</p>
{{/if}}