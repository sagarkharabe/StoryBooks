<h2>All Stories</h2>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
          <i class="fa fa-pencil"></i>
        </a>
      </div>
      <div class="card-content centre-align">
        <h5 class="story-title">{{stripTags (truncate title 20)}}</h5>
        <p class="story-text">{{stripTags (truncate body 150)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="Author"> {{user.firstName}} {{user.lastName}}
        </div>
      </div>
      <div class="card-action center-align">
        <div class="btn grey" href="/stories/show/{{id}}">
          Read More
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories to show.</p>
  {{/each}}
</div>