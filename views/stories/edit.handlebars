<h3>
  <span style="color:red">Add </span>Edit Story</h3>


<div class="row">
  <form action="/stories" class="col s12" method="POST">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status">
          {{#select story.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <p>

        <input type="checkbox" name="allowComments" class="filled in" id="allowComments" {{#if story.allowComments}}checked='checked'
          {{/if}}>
        <label for="allowComments">Allow Comments</label>
      </p>
    </div>


    <div class="row">
      <div class="input-field">
        <h5>Tell us your story</h5>
        <textarea name="body" cols="30" rows="6"></textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>